extends layout

block content
    .content(style='text-align: center; margin: 0px; width: 1000px')
        h2=title
        ul.errors
            if errors
                each error, i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/posts/add', enctype="mulitpart/from-data")
            .form-group
                lable Blogtitel:
                input.form-control(name='title', type='text')
            .form-group
                lable Kurze Beschreibung:
                input.form-control(name='description', type='text')
            .form-group
                lable Inhalt:
                textarea.form-control(name='body', id='body')
            .form-group
                lable Filmposter:
                input.form-control(name='mainimage', type='file')
            .form-group
                lable Film-Informationen:
                textarea.form-control(name='information', id='information')
            .form-group
                lable Verfasser:
                select.form-control(name='author')
                    option(value='Giuliano Metallo') Giuliano Metallo
                    option(value='Carsten Clauss') Carsten Clauss
            input.btn.btn-default(name='submit', type='submit', value='Speichern')
            script(src='/ckeditor/ckeditor.js')
            script
                | CKEDITOR.replace('body');